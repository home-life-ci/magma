{
  "plugins": ["prettier-plugin-apex"],
	"trailingComma": "none",
	"tabWidth": 4,
	"useTabs": false,
	"printWidth": 160,
	"apexInsertFinalNewline": false,
	"overrides": [
		{
			"files": "**/lwc/**/*.html",
			"options": { "parser": "lwc" }
		},
		{
			"files": "*.{cmp,page,component}",
			"options": { "parser": "html" }
		}
	]
}

